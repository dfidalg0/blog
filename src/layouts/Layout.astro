---
import '../styles/main.scss';
import ToggleTheme from '../components/ToggleTheme.astro';
import Logo from '@/components/Logo.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - The DF Blog</title>
    <slot name="head" />
	</head>
	<body>
    <header
      class="
        flex
        items-center
        dark:bg-rose-800
        bg-rose-600
        sticky
        top-0
        z-20
        pl-5
      "
    >
      <div class="logo">
        <Logo />
      </div>
      <nav class="ml-auto py-4 px-8 flex items-center text-zinc-200 dark:text-inherit">
        <a class="nav-link mr-10" href="/tags/all/1">Posts</a>
        <ToggleTheme />
      </nav>
    </header>
		<main class="flex flex-col items-center overflow-x-auto max-w-full">
      <slot />
    </main>
	</body>
</html>

<style lang="scss">
$header-height: 50px;

body {
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  scrollbar-gutter: stable;
}

header {
  height: $header-height;
}

main {
  @apply pt-10 pb-20 lg:px-20;
  overflow-x: auto;
  min-height: calc(100vh - #{$header-height});
}

.nav-link {
  @apply text-current hover:text-current hover:opacity-70;
}
</style>
